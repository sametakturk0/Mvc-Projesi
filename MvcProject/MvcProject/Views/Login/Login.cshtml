@model MvcCrudProject.Data.Entities.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))  {
            <div class="form-group">
                @Html.LabelFor(m => m.KullanıcıAdı)
                @Html.TextBoxFor(m => m.KullanıcıAdı, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
               @Html.ValidationMessageFor(m=> m.KullanıcıAdı)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sifre)
                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Şifre" })
               @Html.ValidationMessageFor(m => m.Sifre)
            </div> 
            <button type="submit" class="btn btn-block btn-success text-center btn-dark" >Giriş Yap</button>
        }
    <div class="text-center">@Html.ActionLink("Kayıt Ol", "Ekle")</div> 
    </div>
</body>
</html>
